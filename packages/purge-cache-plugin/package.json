{
  "name": "@riveo/payload-purge-cache-plugin",
  "version": "0.1.1",
  "description": "Payload Purge Cache Plugin",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components": {
      "import": "./dist/exports/components.js",
      "types": "./dist/exports/components.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "payload",
    "cms",
    "plugin",
    "typescript",
    "react",
    "template",
    "cache"
  ],
  "scripts": {
    "prebuild": "mkdir -p dist/components && cp src/components/styles.scss dist/components/styles.scss",
    "build": "tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{cjs,mjs,js,ts,tsx,json,css,md}\" --write",
    "format:check": "prettier \"**/*.{cjs,mjs,js,ts,tsx,json,css,md}\" --check",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "author": "Piotr Rzeczkowski <pr@riveolabs.com> (https://notesofdev.com/)",
  "homepage": "https://github.com/riveo/payload-packages",
  "peerDependencies": {
    "@payloadcms/next": "^3.0.0",
    "@payloadcms/ui": "^3.0.0",
    "next": "^15.0.0",
    "payload": "^3.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.29.0",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
